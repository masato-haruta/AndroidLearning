<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue1"
    tools:context="com.example.haruta.myapplication.MainActivity">


    <EditText
        android:id="@+id/login_edittext_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/login_edittext_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/login_edittext_id"
        android:layout_below="@+id/login_edittext_id"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:hint="PASSWORD"
        android:inputType="numberPassword" />

    <Button
        android:id="@+id/login_button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_edittext_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:text="Login" />
</RelativeLayout>
